#include <math.h>

int main() {
    int a, b;


  printf("Введіть число a:");
  scanf("%d", &a );
  printf("Введіть число b:");
  scanf("%d", &b );
 
    // знаходимо подвоэну суму чисел a та b
  int sum =a*2 + b*2;;
    // знаходимо цілу частину віл ділення a на b
  int quotient = a / b ;
    // знаходимо різницю a та b
  int difference = a - b;

  printf ("Подвоєна сумма = %d\n ділення = %d\n різниця= %d\n",sum,quotient ,difference) ;




    return 0;
}


