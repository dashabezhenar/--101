#include <math.h>

int main() {

    int a, b,c;
    double y;

  printf("Введіть число a:");
  scanf("%d", &a );
  printf("Введіть число b:");
  scanf("%d", &b );
  printf("Введіть число с:");
  scanf("%d", &c );

  
  y = (double) (a+b*c/2*a-b-c) + (a/b+2) ;
  printf ("y = %f", y) ;


    return 0;
}
